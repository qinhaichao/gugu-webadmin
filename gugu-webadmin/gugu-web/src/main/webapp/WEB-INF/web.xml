    <description></description>
    <display-name>SnapScreenServlet</display-name>
    <servlet-name>SnapScreenServlet</servlet-name>
    <servlet-class>com.gugu.commonServlet.SnapScreenServlet</servlet-class>
  </servlet>
  <servlet-mapping>
